<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Walkthrough.controller.App">
	<Shell>
		<App id="idAppControl">
			<pages>
				<Page title="{i18n>pageTitle}">
					<headerContent>
					<Button
							icon="sap-icon://hello-world"
							press="onOpenDialog"/>
					</headerContent>
					<content>
						<mvc:XMLView viewName="Walkthrough.view.HelloPanel"/>
						<mvc:XMLView viewName="Walkthrough.view.InvoiceList"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>