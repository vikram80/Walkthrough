<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="Walkthrough.controller.HelloPanel">
	<Panel headerText="{i18n>helloPanelTitle}">
		<content>
			<l:HorizontalLayout>
			<Button id="BtnDialog"  icon="sap-icon://message-popup" text="{i18n>openDialogbtnText}" press="onOpenDialog" class="sapUiSmallMarginEnd"/>
			<Button text="{i18n>showHelloButtonText}" press="onPress"/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<!--<FormattedText htmlText="Hello {/recipient/name}"/>-->
			</l:HorizontalLayout>
		</content>
	</Panel>
</mvc:View>